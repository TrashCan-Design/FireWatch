<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:strokeColor="@color/outline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:gravity="center_vertical">

        <View
            android:id="@+id/logStatusIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/status_safe_indicator" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtDeviceId"
                    android:text="ESP32_001"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/txtLogStatus"
                    android:text="FIRE"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/status_fire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSeverity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Critical"
                    android:textSize="10sp"
                    app:chipBackgroundColor="@color/status_fire"
                    app:chipStrokeColor="@color/status_fire" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtLogTime"
                android:text="2025-11-06 07:25:00"
                android:textSize="11sp"
                android:textColor="@color/on_surface_variant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>